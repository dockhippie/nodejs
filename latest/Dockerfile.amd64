FROM webhippie/alpine:latest-amd64@sha256:f688fa160d4ce504380d1a9f7d1c5ef72597862e1872c576e944851552aab953

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
