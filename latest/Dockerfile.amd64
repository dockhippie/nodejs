FROM webhippie/alpine:latest-amd64@sha256:01c7b6c25bb14db76c9a75e6f315d1b8bd03e731365dd66fa2e8face8c701f40

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
