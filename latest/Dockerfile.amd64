FROM webhippie/alpine:latest-amd64@sha256:fe8d7dfcb47475d79ed7dc902141d8c9c5d8a0fae6f8b0c4928e5279f959d7e4

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
