FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:6b7ff2e6aa431610e1c3cf4bc0c42d1c0b95267f5a56eed13f7f7a454d69cac0

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
