FROM webhippie/alpine:latest-amd64@sha256:a085923bb8fe37453645e8649c4167f4c1b3935d36be9ec5798eda29c1397e9b

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
