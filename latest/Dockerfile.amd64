FROM webhippie/alpine:latest-amd64@sha256:4fe9cc73b2760897b414eccd39e8fdc3164091d6793ace18563ee3899a2e3071

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
