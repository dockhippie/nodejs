FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:c639739d2350058b05ed9fefb249f9250ed0987e6c41ec6a9b9d8bad2ef95f05

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
