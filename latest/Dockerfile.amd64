FROM webhippie/alpine:latest-amd64@sha256:39888f8d238d0b41ed02657e9c3d1c4bc8b46e66bf37ae15c066f2f9b281469e

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
