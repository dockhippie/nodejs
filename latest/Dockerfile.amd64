FROM webhippie/alpine:latest-amd64@sha256:0ee91a4aac95e8ee0fd67eb4d9ede7dcfcd7396873fad5e04425e335b5eb69a4

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
