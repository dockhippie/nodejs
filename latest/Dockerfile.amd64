FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:e88daf2110eb7e3d851af3d03c8bd6068b43cc9a9b9764413e88fa9c4cffac8e

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
