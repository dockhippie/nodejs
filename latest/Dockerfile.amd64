FROM webhippie/alpine:latest-amd64@sha256:7bf9c9c61e921d7351a920766331f072be7ca3a6ea5e918d3cce8a1d594b2b05

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
