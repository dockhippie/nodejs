FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:75ece692f395223544b8f69794bb46733afa406dbf2c67817f5513e5e68f9dc0

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
