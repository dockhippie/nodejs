FROM webhippie/alpine:latest-amd64@sha256:a33244d317d39cd6818cb592d96d271b6e3fd517244cba0ee3ca504bd6ca1ff3

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
