FROM webhippie/alpine:latest-amd64@sha256:56ea2135410ac41ca83373d56be63bc73569bb1e2a20bc449fab2b2adaf18ec5

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
