FROM webhippie/alpine:latest-amd64@sha256:9d21c488cb0363db756eccac3e7851a56e7468681f34788c5b42f814067d17d6

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
