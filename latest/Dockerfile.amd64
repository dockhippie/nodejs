FROM webhippie/alpine:latest-amd64@sha256:c5ce0187ab363ea10e12864a4c79b3c1421d2ab25f7957681301b3b745bda201

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
