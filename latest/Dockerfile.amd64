FROM webhippie/alpine:latest-amd64@sha256:243a706fb7943f39c8d1570485bbd4720f453b378dbf17b3c7238b99cddac16f

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
