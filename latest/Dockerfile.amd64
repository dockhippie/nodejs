FROM webhippie/alpine:latest-amd64@sha256:e173e84f45111a872f0ee7af7e1eff48ef252599c7e06ba0fa264a2ed48e48bc

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
