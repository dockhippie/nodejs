FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:7b20c2e00f3733a0f140d8d26b518b427c9596ccced32ddcf6708776cbd8c044

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
