FROM webhippie/alpine:latest-amd64@sha256:29b165837fa5bc393558f2e166f9b0fcbc3b3ecd5c2eb4815dc38d2018f7e6b1

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
