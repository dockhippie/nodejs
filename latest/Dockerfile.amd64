FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:05ec00e6f98fabfc56613b60cbd1e09ffed15c93904aadc18cd0703dd45b2602

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
