FROM webhippie/alpine:latest-amd64@sha256:2ed439952de6b2e91f734fd0de2c80512612de900b3ad3484991cde069ccc40c

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
