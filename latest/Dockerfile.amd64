FROM webhippie/alpine:latest-amd64@sha256:6c81ab82811af102f342c083a29162c7daba0daf2dffcd59aad75da6f916e254

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
