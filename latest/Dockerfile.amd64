FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:a61d119da046ea4b425670e82050aa515101a21b2ff5ce645e90cbfbc250defe

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
