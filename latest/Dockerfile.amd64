FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:f5479650fab9449424080d8095917682b0030b4cff752b36d495d5043b2dce45

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
