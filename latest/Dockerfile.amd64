FROM webhippie/alpine:latest-amd64@sha256:70823ba293ecd24e536d8da0d20854b9afed1d21fd2715ac7bef620af0161fd6

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
