FROM ghcr.io/dockhippie/alpine:latest-amd64@sha256:51efc8a3d71bcbee6a8d3600cfc3e7247fea96e3874a2ff18f1dbe2e1833c2fe

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
