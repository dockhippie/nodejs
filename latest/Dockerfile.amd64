FROM webhippie/alpine:latest-amd64@sha256:49262100204942e7cc6607dc20fa046fcbe902c777fd6e0a19ea0e7d650755f8

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
