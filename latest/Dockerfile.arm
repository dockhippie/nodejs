FROM webhippie/alpine:latest-arm@sha256:3522dccc5498ab8a0595ee444f1a8ed89737dd98fc574b9d90394ad1a599095c

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
