FROM webhippie/alpine:latest-arm@sha256:4e14e9f0c1e7d3b8eb48692fa10fb32bf4876f7a12e711b8b41ffc4a3cd9ab35

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
