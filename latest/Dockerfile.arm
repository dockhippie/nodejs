FROM webhippie/alpine:latest-arm@sha256:23ff052ed950ac8f5383a3ff5516f66a0871f4acedda6d7f17fddfb1bd73ccaa

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
