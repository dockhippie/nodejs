FROM ghcr.io/dockhippie/alpine:latest-arm@sha256:6afab5bf6b5c2e4e9174a7723fca8e94687025d78034dbe5cf8c55ab9d7bad26

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
