FROM webhippie/alpine:latest-arm@sha256:e49de1ac7cf99a6e058858a97c587a7692036e797bb72891c61c9b24e0975002

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
