FROM webhippie/alpine:latest-arm@sha256:5c61a3d97e10bfd68ae6793a597bfd784c7788060b096abaea03768056dfdf24

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
