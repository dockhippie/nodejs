FROM webhippie/alpine:latest-arm@sha256:2a37bc438358112b424758bdda516f2cb95dc0fbceb44dfb69a4d3a607cb75d1

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
