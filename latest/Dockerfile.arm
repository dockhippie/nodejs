FROM webhippie/alpine:latest-arm@sha256:bdd98c710ec6a87087bf3400c699e90765744d7c65fd837aaf3bb3260309c089

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
