FROM webhippie/alpine:latest-arm@sha256:7694885170f1206e0edb100f937400e6acf2d39270211598fc8ccf3d902d52f2

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
