FROM webhippie/alpine:latest-arm@sha256:3e3cc7a798fc86f8845422f425d1f0aff996be568eacb33fd1a7b921ba2ee799

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
