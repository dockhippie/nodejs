FROM webhippie/alpine:latest-arm@sha256:eaeec7c580df913ce071f582f82c98dce4621ea81fe6365ebb3129238d07620f

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
