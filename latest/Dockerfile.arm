FROM ghcr.io/dockhippie/alpine:latest-arm@sha256:ff48ca624b292abcf0862840b216f1f209ee0bc361725b642bca2c467ee2f467

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
