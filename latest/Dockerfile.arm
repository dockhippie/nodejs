FROM webhippie/alpine:latest-arm@sha256:c3931f712b6d826763553ec0edf3ad26141b7d22d6fa41d5a4648848d3b383d5

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
