FROM webhippie/alpine:latest-arm@sha256:951b94f68ba29766b36a3cd8fede72494f1eda1cd798db950dc7a6a5e310ec24

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
