FROM webhippie/alpine:latest-arm@sha256:be72042e81c75cf6cfac2961e89ac7c7fe72a691c2e6bfcb9365a477957c1910

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
