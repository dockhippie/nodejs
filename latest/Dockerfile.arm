FROM webhippie/alpine:latest-arm@sha256:b99cfda0652a0ffa14a24ae214df5c96eea9f9612e28b75784163dd4499823d9

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
