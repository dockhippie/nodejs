FROM webhippie/alpine:latest-arm@sha256:9a59d61e77f62f96113b2f4fbcd4e430c27fd001f6948ed1741e36b7e9348bff

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
