FROM webhippie/alpine:latest-arm@sha256:4250be95294efe8099ddabee5a9f9f3cf50a6c5c899ee07555dc425e67a3abed

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
