FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:bd3f6c6e7d21801ebd60edf6bd5991e5f457be06cbc2fba6d7691e3fb5013297

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
