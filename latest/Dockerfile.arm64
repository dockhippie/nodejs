FROM webhippie/alpine:latest-arm64@sha256:304bc1d52d7acd7621eaa61b3089fe7db2122663d83c0c7095df146a400d693e

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
