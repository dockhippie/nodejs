FROM webhippie/alpine:latest-arm64@sha256:bf8efad0d7158948317b04930ef601bf32b30bde00152916fc157ac4af9daf49

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
