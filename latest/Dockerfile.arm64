FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:f2b5f17d5bcecc876889c72fe2f08c8747a6643a250ccd7b5b72ccdfddbb36f7

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
