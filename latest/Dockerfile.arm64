FROM webhippie/alpine:latest-arm64@sha256:c020655b2394058dbe4352dccc6d176b05ad0bd6d77ee5d28d58c2d4780e0034

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
