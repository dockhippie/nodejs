FROM webhippie/alpine:latest-arm64@sha256:e0fada2aa503b75baa4db691e435877aee58d7536bd37fd01353d8809e876f20

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
