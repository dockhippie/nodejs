FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:aa94bcd456e8538bf914b6c8204a56f4028a99f79a2a35cc0c63aa0b26c8e994

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
