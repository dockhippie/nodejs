FROM webhippie/alpine:latest-arm64@sha256:8eb917aef95701ce2ac35828afab387e2b9e3e04f62c7eac286ee7843dd80f16

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
