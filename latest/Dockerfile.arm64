FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:980b353deb35bc37218b7b4d93b9050529ea02d28345f7f4ad96a80d8470c52c

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
