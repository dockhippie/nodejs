FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:f4b59ed8900bb70e5ad839ccba05458cb8d09fabdcf2b07f07818aa322e88828

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
