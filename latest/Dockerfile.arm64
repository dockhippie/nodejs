FROM webhippie/alpine:latest-arm64@sha256:b76e7f0bcdb6c08d5aa341aa4b5e51a94cce4d77c97ee575fbba0b143346482f

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
