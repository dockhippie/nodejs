FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:05f0da60e5ac1c20fa07bd3ba59fab879abe05561783b8666beab35f356feae4

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
