FROM webhippie/alpine:latest-arm64@sha256:a312f819b3338ddbcfd7e39e2cce14780e2edde082cebfa42def99712976ff2c

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
