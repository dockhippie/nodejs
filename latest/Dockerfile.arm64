FROM webhippie/alpine:latest-arm64@sha256:f42dfbdc0530816f84e409f618327a50d287e956c93daf0827708baba832938b

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
