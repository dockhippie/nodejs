FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:1312caff163a115533faae61a58ef9118c9f813d3ccc1ff4d0ef07ba1583d986

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
