FROM webhippie/alpine:latest-arm64@sha256:0d1498ef1220d3f5c3350541048d041dc674305badc77c9fc674716f4d0ae258

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
