FROM webhippie/alpine:latest-arm64@sha256:0e8f1ef77ac6d03dd3ec413ef5072157a719b7f0bdb01c8c5cf3f138198422dd

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
