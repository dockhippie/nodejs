FROM webhippie/alpine:latest-arm64@sha256:9f48028277d8580eafc9e72c55d13e56cfac015954314d0ac38613d46fb148eb

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
