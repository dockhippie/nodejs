FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:575bed5f4723df91cb16ff3ad3fe1c479839dcd568db3cad204efb36d85125f6

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
