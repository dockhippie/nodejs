FROM webhippie/alpine:latest-arm64@sha256:9e8463864536679aed94d7c0cb22c24b1ef42fe9be99d9b2bd29004d5d71658f

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
