FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:8062cdd268fb300ebd1083750685aa46418408a2e4078d993e4714d593f58398

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
