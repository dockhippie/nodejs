FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:116a545b7d9b4cba862f665a82a822d5079bfabd9c10d5b2aa15b4dcbadee793

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
