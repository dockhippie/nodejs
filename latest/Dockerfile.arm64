FROM webhippie/alpine:latest-arm64@sha256:2d49635ac3847b2a4f47728df2166ec13d6f498711d49c2d27b8d91544fa9cff

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
