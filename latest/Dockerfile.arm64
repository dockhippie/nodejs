FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:9573f22196dd08162c88c61e56738114f9566aea7fab1b6b6c3583e8ea45a026

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
