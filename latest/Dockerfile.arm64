FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:fa2f6b1151ac0336a90785b17436572a9797284b9eb833d14c13de45a4ba1ef2

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
