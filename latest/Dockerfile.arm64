FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:e1d0d6fd096bbbad552c3121213ce7f8cd7da10b30aa182266deb1c48509eebc

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
