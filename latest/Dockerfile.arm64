FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:84a74c5f4eeb011d74b091b50d83e1b91e9bb193248efbeb6a04d348ad14805d

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
