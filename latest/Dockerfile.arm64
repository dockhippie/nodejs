FROM webhippie/alpine:latest-arm64@sha256:835ecbad9b03b8898a888e40633bcf635c4227d0a57f4fab72092045c79d7084

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
