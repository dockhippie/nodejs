FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:68d64474a20f52979b7e865dd2bb57c46051a30fae1b0154e74ffaf70d17dae8

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
