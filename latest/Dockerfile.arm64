FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:0f31ea0a0cb80f67d2270b67fc7d4fdc672359029135e36e7eef27ca530d9d9d

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
