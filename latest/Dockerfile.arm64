FROM webhippie/alpine:latest-arm64@sha256:e931767e6f9c9b53f4f70b5373ed9c5616e639d0d7ddde1d351e750dc2a03ed2

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
