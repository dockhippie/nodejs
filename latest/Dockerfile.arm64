FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:bf2c966548f93edeee7a9dfc03b98f1ed7ed9ccd6503b50912be86b486d16fc8

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
