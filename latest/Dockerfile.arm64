FROM webhippie/alpine:latest-arm64@sha256:dcec3c0345465ba5d5b7ead5763aaa2d4c00d94d46c539369fe0ad3c7257de88

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
