FROM webhippie/alpine:latest-arm64@sha256:713b4ae7c571ceafed3a6562a0d806bf554438ba41cbf03ad45ce257b5adb816

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
