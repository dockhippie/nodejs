FROM webhippie/alpine:latest-arm64@sha256:e47fbfb65c6eecdcea190be2b06c03d343c7607a6a3a9865708ede966075b36c

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
