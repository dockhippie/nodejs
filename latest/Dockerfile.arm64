FROM ghcr.io/dockhippie/alpine:latest-arm64@sha256:a1ceffa543c29a47f32a010987408704e4e76779ee8aa2f4892bc87c34466de0

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  yarn global add gulp grunt-cli bower && \
  rm -rf /var/cache/apk/*
