FROM webhippie/alpine:latest-arm64@sha256:74814c596e105d4fa5f65d467064bf0997fa2ebe85a06d56116e19789ea85136

WORKDIR /srv/app

COPY ./overlay /

RUN apk update && \
  apk upgrade && \
  apk add build-base git nodejs-dev nodejs npm yarn file autoconf automake && \
  rm -rf /var/cache/apk/*

RUN yarn global add gulp grunt-cli bower
